Adafruit_NeoPixel strip = Adafruit_NeoPixel(40, NEO_PIN, NEO_GRB + NEO_KHZ800);



////////////////////////////////////////////////////////////////////////////////
// Setup / main section
////////////////////////////////////////////////////////////////////////////////

//setup routine
void setup() {
  Serial.begin(115200);
  Serial.print(F("Mode: "));
#if defined(SW_TEST)
  Serial.println(F("Test"));
  setupTest();
#elif defined(SW_CONTROLLER)
  Serial.println(F("Keys controller"));
  setupController();
#endif
  Serial.println(" ");
}

//main loop
void loop() {
#if defined(SW_TEST)
  loopTest();
#elif defined(SW_CONTROLLER)
  loopController();
#endif
}
